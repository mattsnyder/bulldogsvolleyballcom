      %li.recent-widget.one_third
        %h4 Recent News
        %section.container
          %ul.slides
            - recent_news.each do |story|
              %li
                %h3
                  = link_to story.headline, story_url(story)
                %h6
                  Posted by
                  %strong= story.author
                  on
                  %strong= story.publication_date.to_s(:pubtime)
                %p= story.teaser
                = link_to "CONTINUE READING", story_url(story)

