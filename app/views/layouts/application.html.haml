!!!
%html
  %head
    %title Stow Bulldogs Boys Volleyball
    = csrf_meta_tags
    / Apple iOS Settings
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "/assets/apple-touch-icon-114x114.png"}
    %link{:rel => "apple-touch-icon", :sizes => "72x72", :href => "/assets/apple-touch-icon-72x72.png"}
    %link{:rel => "apple-touch-icon", :href => "/assets/apple-touch-icon.png"}

    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}    
    %meta{:content => "default", :name => "apple-mobile-web-app-status-bar-style"}
    %meta{:content => "width=device-width, minimum-scale=1, maximum-scale=1", :name => "viewport"}
    %link{:href => "/assets/ios_icon.png", :rel => "apple-touch-icon-precomposed"}
    %link{:href => "http://fonts.googleapis.com/css?family=Bitter:400italic|Exo:400,800", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag "application", :media => "all" 
    = javascript_include_tag "application"      
    /[if gte IE 9]
      <style type="text/css">
      \.button, .button:hover, .button.grey, .button.grey:hover {
      filter: none;
      }
      </style>
  %body
    %section#wrap
      %header
        %section.shell
          %h1#logo
            = link_to image_tag("stowbulldogs.png"), root_url
          %nav
            %ul
              %li
                %a{:href => root_url} Home
              %li
                %a{:href => events_url} 
                  Calendar 
                  %span.arrow
                %section.dropdown
                  %ul
                    %li= link_to "View Calendar", events_url
                    %li= link_to "Subscribe to Calendar", events_url(:format => 'ics')
              %li
                %a{:href => super_scrimmage_url} Super Scrimmage
              %li
                %a{:href => news_url} News
              %li.phone @bulldogsvball
          #mobile-nav
            %ul
              %li
                %a{:href => root_url} Home
              %li
                %a{:href => events_url} 
                  Calendar 
                  %span.arrow
                %section.dropdown
                  %ul
                    %li= link_to "View Calendar", events_url
                    %li= link_to "Subscribe to Calendar", events_url(:format => 'ics')
              %li
                %a{:href => super_scrimmage_url} Super Scrimmage
              %li
                %a{:href => news_url} News
              %li.phone @bulldogsvball
            %a.mobile-nav-toggle +
      = yield

      %section#footer-push
    %footer
      %section.top
        %section.shell
          %ul
            %li.one_third
              .map-widget
                %iframe{:frameborder => "0", :height => "151", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => "https://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=one+infinite+loop&aq=&spn=0.006295,0.006295&ie=UTF8&hq=&t=m&ll=41.168409,-81.39711&spn=0.006295,0.006295&z=13&output=embed", :width => "100%"}
            %li.one_third
              .contact-widget
                %h4 GET IN TOUCH
                %ul
                  %li
                    %span.right +1 (330) 689-5300
                    3227 Graham Road
                  %li
                    %span.right +1 (330) 689-5204
                    Stow, OH 44224
                  %li
                    %a{:href => "http://twitter.com/bulldogsvball"} @bulldogsvball
                %ul.socials
                  %li.twitter
                    %a{:href => "http://twitter.com/bulldogsvball"} Twitter
                  %li.rss
                    %a{:href => events_url(:format => "ics")} RSS
            %li.one_third.last
              .schedule-widget
                %h4 March practice times
                %ul
                  %li
                    %span.right TBD
                    Monday - Thursday
                  %li
                    %span.right TBD
                    Friday
                  %li
                    %span.right TBD
                    Saturday
      %section.bottom
        %section.shell
          %p
            %a#back-to-top.right{:href => "#wrap"} Back to Top
        
    :javascript
      window.jQuery || document.write('<\/script>')
      var _gaq=[['_setAccount','UA-37698145-1'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src='http://www.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));
