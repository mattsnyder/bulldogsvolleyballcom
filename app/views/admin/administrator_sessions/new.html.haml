#mws-login-wrapper
  #mws-login
    %h1 Login
    .mws-login-lock
      %i.icon-lock
    #mws-login-form
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'mws-form') do |f|
        .mws-form-row
          .mws-form-item
            = f.email_field :email, :autofocus => true, :placeholder => "email address", :class => "mws-login-username required"
        .mws-form-row
          .mws-form-item
            = f.password_field :password, :placeholder => "password", :class => "mws-login-password required"
        #mws-login-remember.mws-form-row.mws-inset
          %ul.mws-form-list.inline
            %li
              %input#remember{:type => "checkbox"}
                %label{:for => "remember"} Remember me
        .mws-form-row
          = f.submit 'Login', :class => 'btn btn-success mws-login-button'